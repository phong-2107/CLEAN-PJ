{
  "info": {
    "_postman_id": "user-permission-tests",
    "name": "User Permission System Tests",
    "description": "Complete test collection for User-Specific Permission Management (Hybrid RBAC + ABAC)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login as Admin",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "pm.environment.set(\"token\", jsonData.accessToken);",
                  "pm.environment.set(\"userId\", jsonData.userId);"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"usernameOrEmail\": \"admin\",\n  \"password\": \"Admin@123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "User Permissions",
      "item": [
        {
          "name": "Get All Users (Find Test User)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/users",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users"]
            }
          },
          "response": []
        },
        {
          "name": "Get All Permissions (Find Permission IDs)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/permissions",
              "host": ["{{baseUrl}}"],
              "path": ["api", "permissions"]
            }
          },
          "response": []
        },
        {
          "name": "Get User Permission Details",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/users/{{testUserId}}/permissions/details",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "{{testUserId}}", "permissions", "details"]
            }
          },
          "response": []
        },
        {
          "name": "Get User Permission Overrides",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/users/{{testUserId}}/permissions/overrides",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "{{testUserId}}", "permissions", "overrides"]
            }
          },
          "response": []
        },
        {
          "name": "Grant Permission (Product.Delete)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"permissionId\": 4,\n  \"reason\": \"Temporary access for product cleanup - Testing Hybrid RBAC\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/users/{{testUserId}}/permissions/grant",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "{{testUserId}}", "permissions", "grant"]
            }
          },
          "response": []
        },
        {
          "name": "Deny Permission (Product.Update)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"permissionId\": 3,\n  \"reason\": \"Junior staff - cannot update products yet\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/users/{{testUserId}}/permissions/deny",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "{{testUserId}}", "permissions", "deny"]
            }
          },
          "response": []
        },
        {
          "name": "Revoke Permission Override",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/users/{{testUserId}}/permissions/4",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "{{testUserId}}", "permissions", "4"]
            }
          },
          "response": []
        }
      ]
    },
    {
