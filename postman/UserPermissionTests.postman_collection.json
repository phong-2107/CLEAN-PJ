                  "path": ["api", "users", "{{testUserId}}", "permissions", "details"]
                }
              }
            },
            {
              "name": "2. Deny Product.Create",
              "request": {
                "method": "POST",
                "header": [
                  {
                    "key": "Authorization",
                    "value": "Bearer {{token}}"
                  },
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"permissionId\": 1,\n  \"reason\": \"Scenario 2: Testing DENY precedence over ROLE\"\n}"
                },
                "url": {
                  "raw": "{{baseUrl}}/api/users/{{testUserId}}/permissions/deny",
                  "host": ["{{baseUrl}}"],
                  "path": ["api", "users", "{{testUserId}}", "permissions", "deny"]
                }
              }
            },
            {
              "name": "3. Verify Permission Removed",
              "request": {
                "method": "GET",
                "header": [
                  {
                    "key": "Authorization",
                    "value": "Bearer {{token}}"
                  }
                ],
                "url": {
                  "raw": "{{baseUrl}}/api/users/{{testUserId}}/permissions/details",
                  "host": ["{{baseUrl}}"],
                  "path": ["api", "users", "{{testUserId}}", "permissions", "details"]
                }
              }
            }
          ]
        },
        {
          "name": "Scenario 3: Revoke and Re-Grant",
          "item": [
            {
              "name": "1. Grant Permission",
              "request": {
                "method": "POST",
                "header": [
                  {
                    "key": "Authorization",
                    "value": "Bearer {{token}}"
                  },
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"permissionId\": 4,\n  \"reason\": \"First grant\"\n}"
                },
                "url": {
                  "raw": "{{baseUrl}}/api/users/{{testUserId}}/permissions/grant",
