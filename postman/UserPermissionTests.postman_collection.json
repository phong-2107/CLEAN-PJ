                    "value": "Bearer {{token}}"
                  },
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"permissionId\": 4,\n  \"reason\": \"Scenario 1: Grant Product.Delete\"\n}"
                },
                "url": {
                  "raw": "{{baseUrl}}/api/users/{{testUserId}}/permissions/grant",
                  "host": ["{{baseUrl}}"],
                  "path": ["api", "users", "{{testUserId}}", "permissions", "grant"]
                }
              }
            },
            {
              "name": "2. Grant User.Read",
              "request": {
                "method": "POST",
