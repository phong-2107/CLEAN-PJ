              }
            },
            {
              "name": "3. Verify Details",
              "request": {
                "method": "GET",
                "header": [
                  {
                    "key": "Authorization",
                    "value": "Bearer {{token}}"
                  }
                ],
                "url": {
                  "raw": "{{baseUrl}}/api/users/{{testUserId}}/permissions/details",
                  "host": ["{{baseUrl}}"],
                  "path": ["api", "users", "{{testUserId}}", "permissions", "details"]
                }
              }
            }
          ]
        },
        {
          "name": "Scenario 2: Deny Override Role Permission",
          "item": [
            {
              "name": "1. Check Current Permissions",
              "request": {
                "method": "GET",
                "header": [
                  {
                    "key": "Authorization",
                    "value": "Bearer {{token}}"
